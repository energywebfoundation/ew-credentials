{
  "name": "@energyweb/iam-roles",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "description": "Smart contract and client code specific to EnergyWeb IAM roles",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist ethers && patch-package",
    "test": "run-with-testrpc -m \"candy maple cake sugar pudding cream honey rich smooth crumble sweet treat\" --port 8544 --accounts 20 --networkId=9 --chainId 73799 --gasLimit=10000000 \"lerna run test\" ",
    "setup": "lerna bootstrap --hoist --no-ci",
    "build": "rm -rf build docs packages/*/dist && lerna run compile",
    "compile": "lerna run compile",
    "build:docs": "typedoc",
    "lint": "lerna run lint --parallel --stream -- -- --ignore-path=../../.eslintignore",
    "fix": "lerna run fix --parallel --stream",
    "publish:canary": "lerna publish --cd-version=prerelease --pre-dist-tag prerelease --preid=alpha.$RUN_NUMBER --exact --yes --no-verify-access --no-git-tag-version",
    "publish:release": "lerna version --conventional-commits --exact --yes && lerna publish from-git --yes --no-verify-access",
    "reset": "rm -rf node_modules package-lock.json build docs packages/*/node_modules packages/*/dist packages/*/build packages/*/package-lock.json"
  },
  "keywords": [
    "Energy",
    "EnergyWeb",
    "EW",
    "DID",
    "Registry",
    "DID Registry"
  ],
  "homepage": "https://github.com/energywebfoundation/iam-roles/#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/energywebfoundation/iam-roles.git"
  },
  "bugs": {
    "url": "https://github.com/energywebfoundation/iam-roles/issues"
  },
  "author": {
    "name": "EnergyWeb",
    "url": "https://www.energyweb.org/"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@energyweb/eslint-config": "^0.0.0",
    "@energyweb/prettier-config": "^0.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.1.1",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "@types/chai": "^4.2.16",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chai": "4.3.4",
    "chai-arrays": "2.2.0",
    "chai-as-promised": "7.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "ganache-cli": "^6.12.2",
    "husky": "^4.3.8",
    "lint-staged": "^11.1.1",
    "mocha": "7.2.0",
    "patch-package": "^6.4.7",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-typescript2": "^0.31.0",
    "run-with-testrpc": "0.3.1",
    "semantic-release": "^17.4.2",
    "ts-node": "9.1.1",
    "typechain": "5.2.0",
    "typescript": "^4.2.3",
    "lerna": "^4.0.0"
  }
}
